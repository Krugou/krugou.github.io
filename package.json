  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/krugou/krugou.github.io.git"
  },
  "scripts": {
    "preinstall": "echo 'ðŸ“¦ Installing dependencies...'",
    "postinstall": "echo 'âœ… Dependencies installed successfully!'",
    "dev": "tsx server.ts",
    "dev:web": "next dev",
    "dev:https": "tsx server.ts --https",
    "dev:admin": "npm run dev & start http://localhost:3000/admin",
    "build": "next build",
    "start": "cross-env NODE_ENV=production tsx server.ts",
    "start:https": "cross-env NODE_ENV=production tsx server.ts --https",
    "lint": "eslint",
    "format": "prettier --write .",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --quiet --reporter=list",
    "certs:generate": "mkdir -p certs && openssl req -x509 -newkey rsa:2048 -keyout certs/localhost-key.pem -out certs/localhost.pem -days 365 -nodes -subj \"/CN=localhost\"",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "lint-staged": {
    "*.txt": [
      "git rm --cached",
      "rm -f"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "express": "^4.18.2",
    "firebase": "^12.9.0",
    "firebase-admin": "^11.6.0",
