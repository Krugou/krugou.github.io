{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx --env-file=../.env --watch server.ts",
    "dev:https": "tsx server.ts --https",
    "start": "cross-env NODE_ENV=production tsx server.ts",
    "start:https": "cross-env NODE_ENV=production tsx server.ts --https",
    "lint": "echo \"No lint configuration for backend.\"",
    "export:events": "node --env-file=../.env export-events.ts",
    "fetch:events": "tsx ../scripts/fetch-game-data.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "firebase": "^12.9.0",
    "firebase-admin": "^11.6.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.33",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0"
  }
}
